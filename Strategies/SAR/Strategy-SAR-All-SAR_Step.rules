## Init settings.
name=SAR
param=${name}_Step
param_list=( $param )
period=$(ea_get_period)

## EA settings.
ea_default_sets
ea_strategies_enabled 0
ea_strategy_enabled ${name}${period#M}

## Optimization settings.
value=$(input_get $param)
input_set ^$param,F 1
input_set ^$param,1 $( bc <<< "if ($value - 0.10 > 0.02) $value - 0.10 else 0.02" )
input_set ^$param,2 0.01
input_set ^$param,3 $( bc <<< "$value + 0.10" )

